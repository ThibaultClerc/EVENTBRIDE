<h1 class="display-4 jumbotron text-center mb-5 mt-5">Créer un évènement</h1>

<%= form_for @event, :html => {:class => "w-25 mt-5 form-signin mx-auto user_form mb-5"} do |f|%>

  
  <div class="form-group">
    <%= f.text_field :title, class:"form-control", placeholder:"Titre" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, class:"form-control", placeholder:"Description" %>
  </div>
  <div class="form-group">
    <%= f.text_field :location, class:"form-control", placeholder:"Lieu" %>
  </div>
  <div class="form-group">
    <%= f.number_field :price, class:"form-control", placeholder:"Prix", in: 0...500 %>
  </div>

  <div class="form-group">
  <%= f.label :start_date, 'Date' %> </br>
    <%= f.datetime_select :start_date, :ampm => true, :minute_step => 15 %>
  </div>

  <div class="form-group">
    <%= f.label :duration, 'Durée' %> </br>
    <%= f.select :duration, [['15', 15], ['30',30], ['30', 30], ['60',60]] %> <span> minutes </span>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-lg btn-primary btn-block">Créer l'évènement</button>
  </div>

  <% end %>
